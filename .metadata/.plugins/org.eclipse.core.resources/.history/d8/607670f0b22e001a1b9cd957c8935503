package com.bridgelabz.felloship.source;

import java.io.BufferedReader;
import java.io.FileReader;
import java.util.ArrayList;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;
import com.google.gson.reflect.TypeToken;

public class check {
	public static ArrayList<Person> readbook() {
		ArrayList<Person> list;
		try {
			BufferedReader bufferedReader = new BufferedReader(new FileReader(
					"/home/admin1/Desktop/JavaProject/com.bridgelbz.felloship.addressbook/src/com/bridgelabz/felloship/utility/demo.json"));
			Gson gson = new GsonBuilder().setPrettyPrinting().create();

			ArrayList<Person> list = gson.fromJson(bufferedReader, new TypeToken<ArrayList<Person>>() {
			}.getType());
			// ArrayList<Person> list = gson.fromJson(bufferedReader,
			// TypeToken<ArrayList>());
			System.out.println(list.get(1).FirstName);

		} catch (Exception e) {
			// TODO: handle exception
		}
		return list;

	}

